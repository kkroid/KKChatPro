<resources>

    <style name="cr_MessageTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/padding_tiny</item>
        <item name="android:textColor">@color/norm_hint</item>
        <item name="android:textSize">@dimen/norm_text_size_three</item>
    </style>

    <style name="cr_MessageEvent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_horz</item>
        <item name="android:layout_marginEnd">@dimen/padding_horz</item>
        <item name="android:layout_marginTop">@dimen/padding_ver</item>
        <item name="android:layout_marginBottom">@dimen/padding_ver</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_tiny</item>
        <item name="android:paddingEnd">@dimen/padding_tiny</item>
        <item name="android:paddingTop">@dimen/padding_tiny</item>
        <item name="android:paddingBottom">@dimen/padding_tiny</item>
        <item name="android:textSize">@dimen/norm_text_size_four</item>
        <item name="android:textColor">@color/norm_assist_text</item>
    </style>

    <style name="cr_MessageLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="cr_MessageAvatar">
        <item name="android:layout_width">@dimen/dp_54</item>
        <item name="android:layout_height">@dimen/dp_54</item>
        <item name="android:layout_marginStart">@dimen/padding_small</item>
        <item name="android:layout_marginEnd">@dimen/padding_small</item>
        <item name="android:src">@mipmap/ic_launcher</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="cr_MessageName">
        <item name="android:ems">5</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#B3B3B3</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="cr_MessageText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">225dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColor">@color/norm_text</item>
        <item name="android:autoLink">web</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
    </style>

    <style name="cr_MessageContent">
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#373334</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="cr_MessageSend">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
